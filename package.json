{
    "name": "kampong-backend",
    "version": "1.0.0",
    "description": "Kampong Backend API",
    "main": "dist/server.js",
    "engines": {
        "yarn": "1.x",
        "node": "14.x"
    },
    "scripts": {
        "start": "NODE_ENV=production node dist/server.js",
        "dev": "nodemon src/server.ts",
        "build": "node --max-old-space-size=8192 node_modules/.bin/tsc -p src",
        "create-tables-old": "ts-node src/utils/seeder.ts -i",
        "reset-db": "yarn knex:seed:run --specific=reset_db.ts",
        "create-tables": "yarn knex:migrate:rollback all && yarn knex:migrate:latest",
        "import-required": "yarn knex:seed:run --specific=required_data.ts",
        "import-mock": "ts-node src/utils/seeder.ts -d",
        "format": "prettier --write .",
        "heroku-postbuild": "yarn build && yarn reset-db && yarn create-tables && yarn import-required && yarn import-mock",
        "knex:migrate:make": "knex --knexfile src/database/knexfile.ts migrate:make -x ts",
        "knex:migrate:latest": "knex --knexfile src/database/knexfile.ts migrate:latest",
        "knex:migrate:rollback": "knex --knexfile src/database/knexfile.ts migrate:rollback",
        "knex:migrate:list": "knex --knexfile src/database/knexfile.ts migrate:list",
        "knex:seed:make": "knex --knexfile src/database/knexfile.ts seed:make -x ts",
        "knex:seed:run": "knex --knexfile src/database/knexfile.ts seed:run",
        "test": "jest"
    },
    "license": "MIT",
    "dependencies": {
        "aws-sdk": "^2.724.0",
        "bcryptjs": "^2.4.3",
        "bluebird": "^3.7.2",
        "class-transformer": "^0.3.2",
        "class-validator": "^0.13.1",
        "colors": "^1.4.0",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "cron": "^1.8.2",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-fileupload": "^1.2.0",
        "express-rate-limit": "^5.1.3",
        "express-validator": "^6.6.0",
        "handlebars": "^4.7.6",
        "helmet": "^3.23.3",
        "hpp": "^0.2.3",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "moment-timezone": "^0.5.32",
        "morgan": "^1.10.0",
        "nodemailer": "^6.4.11",
        "pg-promise": "^10.5.7",
        "shelljs": "^0.8.4",
        "xss-clean": "^0.1.1"
    },
    "devDependencies": {
        "@types/cron": "^1.7.2",
        "@types/express": "^4.17.8",
        "@types/jest": "^26.0.15",
        "@types/lodash": "^4.14.165",
        "@types/multer": "^1.4.4",
        "@types/node": "^14.11.2",
        "@types/nodemailer": "^6.4.0",
        "@types/shelljs": "^0.8.8",
        "@typescript-eslint/eslint-plugin": "^4.3.0",
        "@typescript-eslint/parser": "^4.3.0",
        "eslint": "^7.10.0",
        "eslint-config-prettier": "^6.12.0",
        "eslint-plugin-prettier": "^3.1.4",
        "jest": "^26.6.3",
        "knex": "^0.21.6",
        "nodemon": "^2.0.5",
        "prettier": "2.1.2",
        "ts-jest": "^26.4.4",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.5"
    }
}
