{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug and Watch Current Unit Test File",
            "type": "node",
            "request": "launch",
            "args": ["--runInBand", "--watch", "${file}"],
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        }
    ]
}
