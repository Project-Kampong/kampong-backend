{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "target": "ES2020",
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "moduleResolution": "node"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
